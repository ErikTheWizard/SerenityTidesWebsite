import { render, screen } from '@testing-library/react'
import HomePage from '@/app/page'

describe('HomePage', () => {
  it('renders without crashing', () => {
    // This test ensures the component can render without throwing errors
    expect(() => render(<HomePage />)).not.toThrow()
  })

  it('renders the main content area', () => {
    render(<HomePage />)
    
    // Check for main content area
    const main = screen.getByRole('main')
    expect(main).toBeInTheDocument()
  })

  it('contains some text content', () => {
    render(<HomePage />)
    
    // Look for any text content to ensure the page isn't empty
    const textElements = screen.getAllByText(/\w+/)
    expect(textElements.length).toBeGreaterThan(0)
  })

  it('has proper document structure', () => {
    render(<HomePage />)
    
    // Check that the page has some basic structure
    const main = screen.getByRole('main')
    expect(main).toBeInTheDocument()
    
    // Should have some content within main
    expect(main.children.length).toBeGreaterThan(0)
  })
})

