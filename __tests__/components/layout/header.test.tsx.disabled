import { render, screen } from '@testing-library/react'
import { AppHeader } from '@/components/layout/header'

describe('AppHeader', () => {
  it('renders the header with navigation links', () => {
    render(<AppHeader />)
    
    // Check if navigation links are present
    expect(screen.getByText('About Us')).toBeInTheDocument()
    expect(screen.getByText('Events')).toBeInTheDocument()
    expect(screen.getByText('Live Location')).toBeInTheDocument()
  })

  it('has correct navigation link hrefs', () => {
    render(<AppHeader />)
    
    // Check if links have correct href attributes
    const aboutLink = screen.getByRole('link', { name: 'About Us' })
    const eventsLink = screen.getByRole('link', { name: 'Events' })
    const liveLocationLink = screen.getByRole('link', { name: 'Live Location' })
    
    expect(aboutLink).toHaveAttribute('href', '/about')
    expect(eventsLink).toHaveAttribute('href', '/events')
    expect(liveLocationLink).toHaveAttribute('href', '/live-location')
  })

  it('renders the mobile menu trigger', () => {
    render(<AppHeader />)
    
    // Check if mobile menu button is present
    const menuButton = screen.getByRole('button')
    expect(menuButton).toBeInTheDocument()
  })

  it('has proper accessibility attributes', () => {
    render(<AppHeader />)
    
    // Check if header has proper semantic structure
    const header = screen.getByRole('banner')
    expect(header).toBeInTheDocument()
    expect(header).toHaveClass('sticky', 'top-0', 'z-50')
  })
})

